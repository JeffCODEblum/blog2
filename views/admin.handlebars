<div class="container" style="max-width: 600px; background-color: #fff">
    <h1>admin</h1>
    {{#if editItem}}
    <div>
        <h4> Edit  Item</h4>
        <div id="id-div" style="display: none;" data-id="{{editItem.id}}"></div>
        <div class="form-group">
            <label>title</label>
            <input id="title-input" type="text" class="form-control" value="{{editItem.title}}" />
        </div>

        <div class="form-group">
            <label>description</label>
            <textarea rows="8" id="description-input" type="text" class="form-control">{{editItem.description}}</textarea>
        </div>

        <div class="form-group">
            <label>body</label>
            <textarea rows="16" id="body-input" type="text" class="form-control">{{editItem.body}}</textarea>
        </div>

        <div style="display: flex; flex-direction: row; justify-content: flex-end; align-items: center;">
            {{!-- <button id="cancel-btn" class="btn btn-sm btn-default" style="border: solid 1px #ccc">Cancel</button> --}}
            <button id="save-btn" class="btn btn-sm btn-primary">Save</button>
        </div>
    </div>
    {{else}}
    <div id="post-form" style="display: none;">
        <h4> Create  Item</h4>
        <div id="id-div" style="display: none;" data-id="{{editItem.id}}"></div>
        <div class="form-group">
            <label>title</label>
            <input id="title-input" type="text" class="form-control" value="{{editItem.title}}" />
        </div>

        <div class="form-group">
            <label>description</label>
            <textarea rows="8" id="description-input" type="text" class="form-control">{{editItem.description}}</textarea>
        </div>

        <div class="form-group">
            <label>body</label>
            <textarea rows="16" id="body-input" type="text" class="form-control">{{editItem.body}}</textarea>
        </div>

        <div style="display: flex; flex-direction: row; justify-content: flex-end; align-items: center;">
            <button id="cancel-btn" class="btn btn-sm btn-default" style="border: solid 1px #ccc">Cancel</button>
            <button id="save-btn" class="btn btn-sm btn-primary">Save</button>
        </div>
    </div>
    {{/if}}

    {{#if editItem}}
        <h4>Images</h4>
        <div class="input-group">
            <input id="file-input" type="file" name="file" data-id="{{editItem.id}}">
            <button id="upload-btn" class="btn btn-md btn-default" style="border: 1px #ccc solid">upload</button>
        </div>

        <label>Uploaded images</label>
        <div style="display: flex; flex-direction: row; justify-content: flex-start; align-items: center;">
            {{#each editItem.imageUrls}}
                <div style="margin: 5px">
                    <img src="{{../url}}/{{this}}" style="width: 70px; height: 70px;"/>
                    <button class="btn btn-xs btn-danger delete-img-btn" data-url="{{this}}">delete</button>
                    <button class="btn btn-xs btn-default shift-img-btn" data-url="{{this}}" style="border: 1px #ccc solid">shift</button>
                </div>
            {{/each}}   
        </div>

        <h4>Comments</h4>
        {{#each comments}}
            <div>
                <p>{{this.email}}</p>
                <p>{{this.name}}</p>
                <p>{{this.comment}}</p>
                <p>{{this.timestamp}}</p>
                <button class="btn btn-danger delete-comment-btn" data-id="{{this.id}}">delete</button>
            </div>
            <hr />
        {{/each}}
    {{/if}}

    <hr>

    <div style="display: flex; flex-direction: column; justify-content: center; align-items: flex-start;">
        <h4>Inventory</h4>
        <div style="width: 100%; padding-bottom: 10px; display: flex; flext-direction: row; justify-content: flex-end;">
            <button class="btn btn-sm btn-primary" id="create-btn">Create New</button>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each items}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.timestamp}}</td>
                        <td>
                            <button class="edit-btn btn btn-sm btn-default" style="border: 1px solid #ccc" data-id="{{this.id}}">
                                edit
                            </button>
                            <button class="delete-btn btn btn-sm btn-danger" data-id="{{this.id}}">
                                delete
                            </button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script src="{{url}}/admin.js"></script>