<div class="container" style="width: 600px; background-color: #fff">
    <h1>{{title}}</h1>
    <div style="text-align: center;">
        <img class="main-img" width="300" height="300" src="{{url}}/{{mainImageUrl}}">
    </div>
    <p>{{description}}</p>
    <div id="id-div" style="display: none;" data-id="{{id}}"></div>
    <p>{{body}}</p>
    <hr />
    <label>Name (public)</label>
    <input id="name-input" type="text" class="form-control" />
    <label>Email (hidden)</label>
    <input id="email-input" type="email" class="form-control" />
    <label>Comment</label>
    <textarea id="comment-input" rows="4" class="form-control"></textarea>
    <br />
    <div style="height: 50px; display: flex; flex-direction: row; justify-content: flex-end;">
        <button id="comment-btn" class="btn btn-primary" style="float: right;">Comment</button>
    </div>
    <hr />
    {{#each comments}}
    <div style="border-bottom: 1px #ccc solid">
        <label>{{this.name}} says</label>
        <p>{{this.comment}}</p>
        <div style="width: 100%; display: flex; flex-direction: row; justify-content: flex-end;">
            <p>{{this.timestamp}}</p>
        </div>
    </div>
    {{/each}}
</div>


